.side-bar
  .side-bar__user
    .side-bar__user__name
      = current_user.name
    %a.side-bar__user__menu{href: new_group_path}
      %i.fa.fa-pencil-square-o
    %a.side-bar__user__menu{href: edit_user_path(current_user)}
      %i.fa.fa-cog
  .side-bar__group-list
    .side-bar__group-list__group
      %a{:href => "#"}
        .side-bar__group-list__group__name
          = "Most Recent Created Group"
        .side-bar__group-list__group__newest-message
          = "Newest Message"
    .side-bar__group-list__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__newest-message
            = "No Message Yet"
